<h1>Alerts for <%= @repo.name %></h1>

<div class="well">
<h2>Your alerts</h2>
<ol>
<% @user_alerts.each do |alert| %>
  <%= link_to repo_alert_path(@repo, alert) do %>
  <li>
      <ul>
        <li>Date: <%= alert.created_at %></li>
        <li>File: <%= alert.file %></li>
        <li>Class: <%= alert.klass %></li>
        <li>Method: <%= alert.function %></li>
        <li>Commit: <%= alert.commit.sha %></li>
      </ul>
  </li>
  <% end %>
<% end %>
</ol>
</div>

<div class="well">
<h2>All alerts</h2>
<ol>
<% @alerts.each do |alert| %>
  <%= link_to repo_alert_path(@repo, alert) do %>
  <li>
      <ul>
        <li>Date: <%= alert.created_at %></li>
        <li>File: <%= alert.file %></li>
        <li>Class: <%= alert.klass %></li>
        <li>Method: <%= alert.function %></li>
        <li>Commit: <%= alert.commit.sha %></li>
      </ul>
  </li>
  <% end %>
<% end %>
</ol>
</div>