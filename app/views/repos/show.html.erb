<div id="title"><h1><%= @repo.name %></h1></div>
<br />

<ul class="nav nav-tabs">
  <li><a href="#stats" data-toggle="tab">Stats</a></li>
  <li><a href="#fixcache" data-toggle="tab">Fix Cache</a></li>
</ul>

<div class="tab-content">

    <div class="tab-pane active" id="stats">
        <div class="well">
          <h2>Stats</h2>
          <p>Total commits: <%= @repo_presenter.commit_count %></p>
          <p>Total complexity: <%= @repo_presenter.total_complexity %></p>
          <p>Last updated: <%= @repo_presenter.last_updated %></p>
        </div>

        <div class="well">
          <%= render "complexity_chart", :commits => @commits, :repo => @repo %>
        </div>

    </div>

  <div class="tab-pane" id="fixcache">
    Loading....
  </div>

</div>

<script type="application/javascript">
    $(function(){
        $.get('<%= fixcache_graph_repo_path(@repo.id) %>', function(data){
          $('#fixcache').html(data);
        });
    });
</script>