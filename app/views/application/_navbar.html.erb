<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="#">Bugwatch</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="dropdown" id="menu1">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Repos<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% current_user.repos.each do |repo| %>
              <li><%= link_to repo.name, repo_path(repo.id) %></li>
              <% end %>
            </ul>
          </li>
          <li><a href="#about">About</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
        <p class="navbar-text pull-right">Logged in as <%= current_user.email %></p>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  <% if repo %>
  <%= render 'subnav', :repo => repo %>
  <% end %>
</div>